# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# LlamaParse Configuration (optional for V1, can use PyPDF)
LLAMA_CLOUD_API_KEY=your_llama_parse_key_here

# App Configuration
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=*
API_KEY=  # Optional: Set for API authentication
WORKERS=2
WORKER_TIMEOUT=120

# Upload & Storage Configuration
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
USE_SUPABASE_STORAGE=True
STORAGE_BUCKET_NAME=pdf-uploads

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Chat Configuration
CHAT_MODEL=gpt-4o
CHAT_MODEL_MINI=gpt-4o-mini
MAX_CONTEXT_CHUNKS=10

# Database Configuration (optional, defaults to Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/chatpdf
